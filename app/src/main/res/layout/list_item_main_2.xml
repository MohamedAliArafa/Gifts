<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:background="@drawable/cardborder"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Sub_Category_Item_Image"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/Sub_Category_Item_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Sub Categry 1"
            android:layout_toRightOf="@+id/Sub_Category_Item_Image"
            android:layout_toEndOf="@+id/Sub_Category_Item_Image"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="10dp"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/Main_Category_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>