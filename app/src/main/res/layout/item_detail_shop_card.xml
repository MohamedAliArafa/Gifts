<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/md_keylines"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/item_detail_shop_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        />


    <TextView
        android:id="@+id/item_detail_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:maxWidth="200dp"
        tools:text="Candy Shop"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_detail_shop_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:maxWidth="300dp"/>


    <Button
        android:id="@+id/item_detail_shop_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Visit Shop"
        android:textAllCaps="false"
        android:textColor="@color/white"

        />


</LinearLayout>

